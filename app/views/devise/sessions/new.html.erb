<h2>Log in</h2>
<br/>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:'form-control', placeholder:'Email Please' %>
  </div>

  <div class="field form-group">
    <%= f.password_field :password, autocomplete: "current-password", class:'form-control', placeholder:'Password Here' %>
  </div>
 
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>
  <br/>
  <div class="actions"> 
    <%= f.submit "Log in", class:'btn btn-dark' %>
  </div>
<% end %>
<br/>
<%= render "devise/shared/links" %>
